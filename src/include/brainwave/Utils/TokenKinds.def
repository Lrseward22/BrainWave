#ifndef TOK
#define TOK(ID)
#endif
#ifndef IDENTIFIER
#define IDENTIFIER(ID) TOK(ID)
#endif
#ifndef LITERAL
#define LITERAL(ID) TOK(ID)
#endif
#ifndef PUNCTUATOR
#define PUNCTUATOR(ID, SP) TOK(ID)
#endif
#ifndef KEYWORD
#define KEYWORD(ID, FLAG) TOK(kw_ ## ID)
#endif

TOK(UNKNOWN)
TOK(EOI)

IDENTIFIER(IDENTIFIER)

LITERAL(INTEGER_LITERAL)
